
<div class="container">
  <center><h1>Rivers</h1></center>
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <table class="table table-hover">
      <thead class="thead-default">
        <tr>
          <th>River</th>
          <th>Current Level</th>
          <th>Currently</th>
        </tr>
      </thead>
      <tbody>
        <% @rivers.each do |river| %>
        <tr data-href='<%= url_for(river)%>' >
          <td> <%= river.name %> </td>
          <td> <%= number_with_precision(river.get_latest_reading.river_level, precision: 2) %> </td>
          <th>
            <span class="badge" style="background-color: <%= river.get_dot_color %>">
              <%= river.get_current_indicator.capitalize %>
            </span>
          </td>
        </tr>
        <% end %>
      </tbody>
    </div>
  </div>
</div>

<script>
$('tr[data-href]').on("click", function() {
    document.location = $(this).data('href');
});
</script>